<% content_for :body do %>
  <div class='registrations'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first[:slug].to_sym) %>

    <%= form_for [refinery, :registrations, @registration] do |f| %>
      <%= render '/refinery/admin/error_messages',
                 :object => @registration,
                 :include_object_name => true  %>

      <div class='field full_name_field string_field'>
        <%= f.label :full_name %>
        <%= f.text_field :full_name %>
      </div>

      <div class='field email_address_field string_field'>
        <%= f.label :email_address %>
        <%= f.text_field :email_address %>
      </div>

      <div class='field phone_number_field string_field'>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number %>
      </div>

      <div class='field ussa_number_field string_field'>
        <%= f.label :ussa_number %>
        <%= f.text_field :ussa_number %>
      </div>

      <div class='field fis_number_field string_field'>
        <%= f.label :fis_number %>
        <%= f.text_field :fis_number %>
      </div>

      <div class='field street_address_field string_field'>
        <%= f.label :street_address %>
        <%= f.text_field :street_address %>
      </div>

      <div class='field city_field string_field'>
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>

      <div class='field state_field string_field'>
        <%= f.label :state %>
        <%= f.text_field :state %>
      </div>

      <div class='field zip_field string_field'>
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </div>

      <div class='field athlete_previous_sponsorship_level_field radio_field'>
        <%= f.label :athlete_previous_sponsorship_level %>
        <% Refinery::Registrations::Registration::ATHLETE_PREVIOUS_SPONSORSHIP_LEVELS.each do |value, name| %>
          <%= f.radio_button :athlete_previous_sponsorship_level, (name || value), :value => value %>
          <%= f.label :"athlete_previous_sponsorship_level_#{(name || value)}", value.humanize %>
        <% end %>
      </div>

      <div class='field athlete_previous_sponsorship_brand_field radio_field'>
        <%= f.label :athlete_previous_sponsorship_brand %>
        <% Refinery::Registrations::Registration::ATHLETE_PREVIOUS_SPONSORSHIP_BRANDS.each do |value, name| %>
          <%= f.radio_button :athlete_previous_sponsorship_brand, (name || value), :value => value %>
          <%= f.label :"athlete_previous_sponsorship_brand_#{(name || value)}", value.humanize %>
        <% end %>
      </div>

      <div class='field athlete_previous_sponsorship_brand_other_field string_field'>
        <%= f.label :athlete_previous_sponsorship_brand_other %>
        <%= f.text_field :athlete_previous_sponsorship_brand_other %>
      </div>

      <div class='field athlete_team_club_name_field string_field'>
        <%= f.label :athlete_team_club_name %>
        <%= f.text_field :athlete_team_club_name %>
      </div>

      <div class='field athlete_age_group_field string_field'>
        <%= f.label :athlete_age_group %>
        <%= f.text_field :athlete_age_group %>
      </div>

      <div class='field athlete_coach_name_field string_field'>
        <%= f.label :athlete_coach_name %>
        <%= f.text_field :athlete_coach_name %>
      </div>

      <div class='field athlete_preferred_race_center_field string_field'>
        <%= f.label :athlete_preferred_race_center %>
        <%= f.text_field :athlete_preferred_race_center %>
      </div>

      <div class='field coach_team_club_name_field string_field'>
        <%= f.label :coach_team_club_name %>
        <%= f.text_field :coach_team_club_name %>
      </div>

      <div class='field coach_position_field string_field'>
        <%= f.label :coach_position %>
        <%= f.text_field :coach_position %>
      </div>

      <div class='field coach_preferred_race_center_field string_field'>
        <%= f.label :coach_preferred_race_center %>
        <%= f.text_field :coach_preferred_race_center %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send') %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render '/refinery/content_page' %>
